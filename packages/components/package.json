{
  "name": "@cognivo/components",
  "version": "0.0.0",
  "description": "AI-native web components for intelligent dashboards",
  "keywords": ["web-components", "lit", "ai", "components", "cognivo"],
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./ai-thinking-indicator": {
      "types": "./dist/components/ai-thinking-indicator/index.d.ts",
      "default": "./dist/components/ai-thinking-indicator/index.js"
    },
    "./ai-confidence-badge": {
      "types": "./dist/components/ai-confidence-badge/index.d.ts",
      "default": "./dist/components/ai-confidence-badge/index.js"
    },
    "./ai-insight-card": {
      "types": "./dist/components/ai-insight-card/index.d.ts",
      "default": "./dist/components/ai-insight-card/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "dev": "vite build --watch",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "test": "wtr \"src/**/*.test.ts\"",
    "test:watch": "wtr \"src/**/*.test.ts\" --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@cognivo/core": "workspace:*",
    "@cognivo/tokens": "workspace:*",
    "lit": "^3.2.0"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.0",
    "@open-wc/testing": "^4.0.0",
    "@web/test-runner": "^0.18.0",
    "@web/test-runner-playwright": "^0.11.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.0.0"
  },
  "customElements": "custom-elements.json"
}
